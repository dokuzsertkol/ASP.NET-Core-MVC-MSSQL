@model List<htddict.Models.Entry>
@{
	ViewData["Title"] = "Entry";
	string input = TempData["SearchTerm"]?.ToString() ?? string.Empty;
}

<h3>Search for "@input"</h3>
<hr>
@if (Model.Count == 0)
{
	<div>
		<h5>Nothing found.</h5>
	</div>
}
else foreach (var entry in Model)
{
	<div>
		<a href="@Url.Action("entry", "entry", new { title = entry.Title })">
			<h5>@entry.Title</h5>
		</a>
	</div>
	<br>
	<div>
		<p>@entry.Content</p>
	</div>
	<br>
	<div>
		<small>@entry.Author?.Name - @entry.Date.ToString()</small>
	</div>
	<hr>
}